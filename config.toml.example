[bot]
token = "YOUR_BOT_TOKEN_HERE"
prefix = "!"
description = "Kyrios - Advanced Discord Administration Bot"

[status]
type = "game"  # game, watching, listening, streaming, custom
message = "Managing your server 🛡️"
streaming_url = ""  # Twitch URLのみ有効 (typeがstreamingの場合)

[database]
path = "kyrios.db"
backup_interval = 3600  # seconds

[logging]
level = "INFO"
file = "kyrios.log"
max_size = 10485760  # 10MB

[features]
tickets = true
logger = true
auto_mod = false

[eventbus]
max_history_size = 1000  # Maximum events to keep in memory (prevents memory leaks)